{
  "name": "OllamaChats",
  "description": "An extension that lets your Ollama server physically chat with ChatGPT.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "frontend.html",
    "default_icon": "OllamaChatsIcon.png"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": ["js/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "host_permissions": ["http://localhost:11434/*"],

  "background": {
    "service_worker": "js/background.js"
  }
}